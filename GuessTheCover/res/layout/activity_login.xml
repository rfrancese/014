<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro1"> 
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout 
    
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    
    <EditText
        android:id="@+id/email_form"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        
        android:layout_marginBottom="15dp"
        
        android:background="#FFFFFF"
        android:ems="20"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:hint="e-mail">
		
        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/password_form"
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email_form"
        android:layout_alignRight="@+id/email_form"
        android:layout_below="@+id/email_form"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:ems="20"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/password_form"
        android:layout_alignRight="@+id/password_form"
        android:layout_below="@+id/password_form"
        android:layout_marginBottom="15dp"
        android:background="#007772"
        android:text="Login" 
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/registra_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/password_form"
        android:layout_alignRight="@+id/login_button"
        android:layout_below="@+id/login_button"
        android:background="#037677"
        android:text="Registrati" 
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/login_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_form"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="76dp"
        android:padding="10dip"
        android:textColor="#e30000"
        android:textStyle="bold" />
    
</RelativeLayout>
</ScrollView>
</RelativeLayout>